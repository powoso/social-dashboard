# Database
DATABASE_URL=sqlite+aiosqlite:///./social_dashboard.db
DASHBOARD_PORT=8001

# Reddit
REDDIT_SUBREDDITS=technology,worldnews,science,programming,stocks,wallstreetbets,cryptocurrency,economics
REDDIT_SORT=hot
REDDIT_LIMIT=25
REDDIT_INTERVAL_MINUTES=10

# Twitter (via Nitter)
TWITTER_QUERIES=breaking news,AI,technology,crypto
TWITTER_NITTER_INSTANCES=https://nitter.privacydev.net,https://nitter.poast.org
TWITTER_INTERVAL_MINUTES=30

# News
NEWS_SOURCES=hackernews,reuters,ap_news
NEWS_INTERVAL_MINUTES=15

# Scraping
SCRAPE_REQUEST_DELAY=2.0
LOG_LEVEL=INFO
